log_format shortlog '[$time_local] $status $request';

upstream ${PROJECT_NAME}-django {
    server ${PROJECT_NAME}-django:8000;
}

upstream ${PROJECT_NAME}-nextjs {
    server ${PROJECT_NAME}-nextjs:3000;
}

upstream ${PROJECT_NAME}-minio {
    server ${PROJECT_NAME}-minio:9000;
}

server {
    listen 80;
    server_name ${PROJECT_DOMAIN};

    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }

    location / {
        return 301 https://$host$request_uri;
    }
}

server {
    listen 443 ssl;
    listen 80;
    access_log /dev/stdout shortlog;

    server_name ${PROJECT_DOMAIN};

    ssl_certificate /app/ssl/${PROJECT_NAME}.crt;
    ssl_certificate_key /app/ssl/${PROJECT_NAME}.key;

    client_max_body_size 5000k;

    gzip on;
    gzip_min_length 1000;
    gzip_proxied any;
    gzip_types text/css application/x-javascript;

    location ~ ^/(admin|api|login|complete|static|s)/ {
        proxy_pass http://${PROJECT_NAME}-django;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Scheme $scheme;
        proxy_set_header Host $http_host;
        proxy_set_header X-Forwarded-Proto 'https';
    }
    location ~ ^/(gryone-static|gryone-media)/ {
        proxy_pass http://${PROJECT_NAME}-minio;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Scheme $scheme;
        proxy_set_header Host $http_host;
        proxy_set_header X-Forwarded-Proto 'https';
    }


    location / {
        proxy_pass http://${PROJECT_NAME}-nextjs;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Scheme $scheme;
        proxy_set_header Host $http_host;
        proxy_set_header X-Forwarded-Proto 'https';
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }
}
